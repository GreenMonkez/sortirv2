{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Liste{% endblock %}

{% block body %}

    <h1>{{ user.pseudo}}</h1>
    <div class=" d-flex align-items-start">
        {% if user.photo %}
            <img src="{{ asset('uploads/photo/' ~ user.photo) }}" alt="Photo de profil de {{ user.pseudo }}" class=" img-thumbnail me-3" style="width: 150px; height: 150px;">
        {% else %}
            <img src="{{ asset('images/profil_vide.jpg') }}" alt="Photo de profil par défaut" class=" img-thumbnail me-3" style="width: 150px; height: 150px;">
        {% endif %}
        <div class=" flex-grow-1">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Prénom :</th>
                        <td>{{ user.firstName }}</td>
                    </tr>
                    <tr>
                        <th>Nom :</th>
                        <td>{{ user.lastName }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone :</th>
                        <td>{{ user.phoneNumber }}</td>
                    </tr>
                    <tr>
                        <th>Email :</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Ville de rattachement :</th>
                        <td>
                            {% if user.site %}
                                {{ user.site.name }}
                            {% else %}
                                <span class="text-muted">Non renseignée</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <a href="{{ path('app_sortie_index') }}" class="btn btn-primary mt-3">Back to sorties</a>


    {% if is_granted('ROLE_ADMIN') or app.user == user %}
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning mt-3">Edit</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        {{ include('user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
