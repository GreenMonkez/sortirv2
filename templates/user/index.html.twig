{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block body %}
    <h1>Liste utilisateurs</h1>

    <a href="{{ path('app_user_new') }}" class=" btn btn-primary mb-3">Créer utilisateur</a>
    <a href="{{ path('app_user_import') }}" class="btn btn-secondary mb-3">Importer utilisateurs</a>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-3">{{ form_row(form.pseudo) }}</div>
        <div class="col-md-3">{{ form_row(form.firstName) }}</div>
        <div class="col-md-3">{{ form_row(form.lastName) }}</div>
        <div class="col-md-3">{{ form_row(form.email) }}</div>
        <div class="col-md-3">{{ form_row(form.isActive) }}</div>
    </div>
    <button class="btn btn-primary mb-3">Filtrer</button>
    <a href="{{ path('app_user_index') }}" class="btn btn-secondary mb-3">Réinitialiser</a>
    {{ form_end(form) }}

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Téléphone</th>
                    <th>Email</th>
                    <th>Actif</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in pagination %}
                <tr>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.phoneNumber }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.isActive ? 'Oui' : 'Non' }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm" >Détails</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Pas d'utilisateur</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="pagination">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
