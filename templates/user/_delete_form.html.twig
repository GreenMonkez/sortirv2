<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}"
      onsubmit="return confirm('Êtes vous sûr de vouloir supprimer ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <div class="d-flex gap-2">
        <button class="btn btn-danger mt-3 mb-3">Supprimer</button>
        <a href="{{ path('app_user_index') }}" class="btn btn-primary mt-3 mb-3">Retour aux utilisateurs</a>
    </div>
</form>
