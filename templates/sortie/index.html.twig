{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    <h1>Sortie index</h1>
    <a class="btn btn-primary m-3" href="{{ path('app_sortie_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>

                <th>Nom de l'évènement </th>
                <th>Début de l'évènement</th>


                <th>Limite d'inscriptions</th>
                <th>Etat</th>


                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>

                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.startAt ? sortie.startAt|date('Y-m-d H:i:s') : '' }}</td>


                <td>{{ sortie.limitMembers }}</td>
                <td>{{ sortie.status.name }}</td>

                <td>
                    <a class="btn btn-primary" href="{{ path('app_sortie_show', {'id': sortie.id}) }}">show</a>
                    {% if is_granted('ROLE_ADMIN') or sortie.planner is same as app.user  %}
                        <a class="btn btn-primary" href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">edit</a>

                    {% endif %}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
