{% extends 'base.html.twig' %}


{% block title %}{{ parent() }} - Réinitialisation{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4" style="max-width: 400px; width: 100%;">
        <h1 class="text-center mb-4" style="color: #66563C;">Réinitialisez votre mot de passe</h1>
            {{ form_start(resetForm) }}
        <div class="mb-3">
            {{ form_row(resetForm.plainPassword) }}
        </div>
            <button class="btn btn-success mt-3 w-70">Réinitialiser</button>
            {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %}
