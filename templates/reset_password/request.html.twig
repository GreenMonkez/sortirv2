{% extends 'base.html.twig' %}

{% form_theme requestForm 'bootstrap_5_layout.html.twig' %}

{% block title %}{{ parent() }} - Demande de réinitialisation{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 style="color: #66563C">Réinitialisation de votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-success mt-3">Envoyer un mail</button>
        <a href="{{ path('app_login') }}" class="btn btn-danger mt-3">Retour à la connexion</a>
    {{ form_end(requestForm) }}
{% endblock %}
